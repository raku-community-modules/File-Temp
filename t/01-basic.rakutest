use Test;
use File::Temp;

plan 4;

ok ::('&tempfile'), 'tempfile was exported';
ok ::('&tempdir'),  'tempdir was exported';

my ($fn, $fh) = tempfile;
is-deeply $fn.IO.e, True, 'file exists when we start';

$fh.DESTROY;
is-deeply $fn.IO.e, False, 'file not longer exists after .DESTROY';

